@import 'nib'
global-reset()

pink = #ff0077

body
  background:#f4f4f4

body > header
  background-image:url(images/top.png)
  width:1024px
  height:123px
  margin: 0 auto

body > footer
  background-image:url(images/bottom.png)
  width: 1024px
  height: 135px
  margin: 0 auto
#content-container
  min-height: 350px
  width: 1024px
  margin: 0 auto
  border-top: 8px dotted pink
  border-bottom: 8px dotted pink
  text-align: center
  & .people-count-container
    margin-top: 100px
  & .people-count
  & .people-count-label
    display: inline-block
    height: 86px
    vertical-align: middle
  & .people-count-label
    margin-top: 54px
    margin-left: 50px

span.digit
  background-image:url(images/counter.png)
  width: 55px
  height: 100%
  display: inline-block
  position: relative
  & span
    position: absolute
    font-size: 46px
    font-weight: bold
    top: 17px
    left: 17px

#new-story-page
  & section
  & aside
    display:inline-block;
  & aside
    & input
    & button
      display:block
  & section
    vertical-align: top
    width: 50%
    margin-right:10px

.content
  text-align: left
  min-height: 100px
  border: 1px dashed hsl(0, 0%, 80%)
  &:hover
  &:active
    border-color: hsl(0, 0%, 90%)
    background: white

.content[contenteditable="true"]
  border-radius: 5px
  padding: 10px


.button
  minimal-button()
  &:before
    color rgba(0,0,0,0.5)
    position relative
    left -13px
    top 2px
    line-height 10px
    content 'j'
    font-family 'IconicStroke'
    font-size 18px
    font-weight normal

input.input
  background: white;
  margin: 0 2px 10px;
  padding: 7px 10px;
  border: 1px solid #BBB;
  border-radius: 2px;
  box-shadow: 0 1px 1px #fff;
  font: 15px/18px Helvetica Neue,"Arial",Helvetica,Verdana,sans-serif;
  text-shadow: 0 0 1px white;
  color: #555;
  width: 270px;
  &:focus
    border-color: #999;

.story-preview
  display:inline-block
  padding: 10px
  margin: 5px 0
  background-color: white
  border: 1px hsl(60, 4%, 85%) solid
  box-shadow: 4px 4px 12px 0px #dddcd8
  width: 200px
  min-height:100px
  max-height:100px
  margin: 5px
  vertical-align: top

article.page
  & header
    margin: 20px 0
    & h1
      font-size: 20px
      font-weight: bold

.hidden
  display:none!important